{
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    {
      "source": "/site.webmanifest",
      "destination": "/site.webmanifest"
    },
    {
      "source": "/((?!api|favicon.ico|favicon.svg|apple-touch-icon.png|site.webmanifest|robots.txt|sitemap.xml).*).*",
      "destination": "/index.html"
    }
  ]
}